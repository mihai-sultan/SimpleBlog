@model SimpleBlog.Areas.Admin.ViewModels.ResetPassword

<h1>Reset Password for @Model.Username</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(f => f.Password)
        @Html.TextBoxFor(f => f.Password, new { @class = "form-control", type = "password" })
    </div>

    <input type="submit" value="Reset Password" class="btn btn-primary" />
    <a href="@Url.Action("index")">or cancel</a>
}

